<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <gradient
                android:angle="135"
                android:startColor="#000000"
                android:endColor="#232323"
                android:type="linear" />
            <padding
                android:left="50px"
                android:top="50px"
                android:right="50px"
                android:bottom="50px" />
            <corners
                android:radius="50px" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="135"
                android:startColor="#676565"
                android:endColor="#2C2C2C"
                android:type="linear" />
            <padding
                android:left="50px"
                android:top="50px"
                android:right="50px"
                android:bottom="50px" />
            <corners
                android:radius="50px" />
        </shape>
    </item>
</selector>