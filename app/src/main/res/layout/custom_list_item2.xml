<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="stock"
            type="Model.Stock">
        </variable>
    </data>

    <LinearLayout
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/search_body">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/search_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:textColor="#FFFFFF"
                android:textSize="24dp" />

            <Button
                android:id="@+id/Button_bookmark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/search_name"
                android:layout_weight="3"
                android:background="@drawable/ic_bookmark"></Button>
        </LinearLayout>

        <TextView
            android:id="@+id/search_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_name"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:textSize="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/search_code"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF" />
    </LinearLayout>
</layout>
