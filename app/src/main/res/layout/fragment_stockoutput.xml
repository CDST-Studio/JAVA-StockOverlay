<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="380dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:background="@color/stockoverlay_black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1000"
        android:background="@color/stockoverlay_black"
        android:gravity="center">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/ic_stockcal"/>
    </LinearLayout>

    <Button
        android:id="@+id/avg_Buy_Button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="251"
        android:background="@drawable/button_cal_1" />
    <Button
        android:id="@+id/avg_Sell_Button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="251"
        android:background="@drawable/button_cal_2" />
    <Button
        android:id="@+id/Button_Total_ProfitLoss"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="251"
        android:background="@drawable/button_cal_3" />
</LinearLayout>