<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.75"
        android:layout_marginTop="30dp"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.75"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#343434">

            <Button
                android:id="@+id/avg_Buy_Button"
                android:drawableLeft="@drawable/ic_calculator_button"
                android:drawablePadding="-90dp"
                android:paddingLeft="90dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="매수평균단가"
                android:textSize="20dp"
                android:textColor="@color/stockoverlay_brown"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:background="#343434" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#5F5E5D">
            <Button
                android:id="@+id/avg_Sell_Button"
                android:drawableLeft="@drawable/ic_calculator_button"
                android:drawablePadding="-90dp"
                android:paddingLeft="90dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="매도평균단가"
                android:textSize="20dp"
                android:textColor="@color/stockoverlay_brown"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:background="#5F5E5D" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#808080">

            <Button
                android:id="@+id/total_ProfitLoss_Button"
                android:drawableLeft="@drawable/ic_calculator_button"
                android:drawablePadding="-90dp"
                android:paddingLeft="90dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="총손익"
                android:textSize="20dp"
                android:textColor="@color/stockoverlay_brown"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:background="#808080"
                >
            </Button>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>