<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.75"
        android:background="@color/black"
        android:gravity="center">

    <ImageView
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:background="@drawable/ic_stockcal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.75"
        android:orientation="vertical"
        android:background="@color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:background="#343434"
            android:layout_gravity="center"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:layout_marginBottom="15dp">

            <EditText
                android:id="@+id/edit_SellPrice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/stockoverlay_brown"
                android:text="매도 단가"
                android:textSize="20dp"
                android:layout_gravity="center">
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:background="#343434"
            android:layout_gravity="center"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:layout_marginBottom="15dp">

            <EditText
                android:id="@+id/edit_SellQuantity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/stockoverlay_brown"
                android:text="매도 수량"
                android:textSize="20dp"
                android:layout_gravity="center">
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:background="#343434"
            android:layout_gravity="center"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:layout_marginBottom="15dp">

            <EditText
                android:id="@+id/edit_SellFee"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/stockoverlay_brown"
                android:text="매도 수수료"
                android:textSize="20dp"
                android:layout_gravity="center">
            </EditText>
        </LinearLayout>
            <Button
                android:id="@+id/input_Sell_Button"
                android:layout_width="120dp"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:background="@drawable/round_background_income"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:textSize="20dp"
                android:text="입력">
            </Button>
    </LinearLayout>

</LinearLayout>