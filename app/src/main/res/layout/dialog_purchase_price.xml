<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/stockoverlay_brown"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_price_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="매입가 및 목표수익"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/dialog_cancle"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="10.5"
            android:background="@drawable/ic_close" />
    </LinearLayout>

    <EditText
        android:id="@+id/dialog_purchase_price"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="#EDE8E8"
        android:gravity="center"
        android:hint="해당 종목의 매입가를 입력해주세요"
        android:inputType="numberSigned"
        android:textColor="#101820"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/dialog_target_price"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="#EDE8E8"
        android:gravity="center"
        android:hint="해당 종목의 목표수익을 입력해주세요"
        android:inputType="numberSigned"
        android:textColor="#101820"
        android:textSize="16dp" />

    <Button
        android:id="@+id/dialog_price_okButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/button_color"
        android:gravity="center"
        android:text="확인"
        android:textColor="@color/stockoverlay_brown"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>