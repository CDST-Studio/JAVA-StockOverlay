<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:id="@+id/avg_Buy_Button"
        android:drawableLeft="@drawable/ic_calculator_button"
        android:drawablePadding="-90dp"
        android:paddingLeft="90dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="총 매수 단가"
        android:textSize="30dp"
        android:textColor="@color/stockoverlay_brown"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:background="#222222" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/stockoverlay_black"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:background="@drawable/border_1_yellow_rectangle"
            android:orientation="vertical">
        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="매수 수량:"
                    android:textColor="@color/stockoverlay_brown"
                    android:textSize="20dp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/stockoverlay_brown"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="총 매수 단가:"
                    android:textColor="@color/stockoverlay_brown"
                    android:textSize="20dp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="매수 단가:"
                        android:textColor="@color/stockoverlay_brown"
                        android:textSize="20dp"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/stockoverlay_brown"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="총 수수료:"
                        android:textColor="@color/stockoverlay_brown"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:paddingLeft="-25dp"/>
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

